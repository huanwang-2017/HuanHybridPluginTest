<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:minHeight="@dimen/dip_190"
                    android:background="#bc000000">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">


            <ImageView
                    android:id="@+id/icon"
                    android:scaleType="fitXY"
                    android:layout_width="@dimen/dip_80"
                    android:layout_height="@dimen/dip_80"
                    android:layout_marginTop="@dimen/dip_30"
                    android:layout_centerHorizontal="true"
            />
            <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dip_10"
                    android:paddingRight="@dimen/dip_10"
                    android:layout_below="@id/icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dip_20"
                    android:textSize="@dimen/dip_20"
                    android:singleLine="true"
                    android:ellipsize="marquee"
            />
            <TextView
                    android:id="@+id/state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dip_10"
                    android:paddingRight="@dimen/dip_10"
                    android:layout_below="@id/title"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/dip_16"
                    android:singleLine="true"
                    android:ellipsize="marquee"
            />

            </RelativeLayout>
        </RelativeLayout>
</RelativeLayout>